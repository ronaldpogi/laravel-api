APP_NAME=Laravel
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://your.domain

LOG_CHANNEL=stack
LOG_LEVEL=info

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret_password

# Queues (database queue per your setup)
QUEUE_CONNECTION=database

# Cache/session
CACHE_DRIVER=file
SESSION_DRIVER=file

# PHP timezone
APP_TIMEZONE=Asia/Manila

# Docker image name for compose (optional; else set in Action secrets)
IMAGE_NAME=yourdockerhubuser/laravel-api
