# =========================
# App
# =========================
APP_NAME="Laravel"
APP_ENV=production
APP_KEY=base64:PASTE_YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info

# =========================
# Database (PostgreSQL)
# Docker service name is "db"
# =========================
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=change_me_strong

# Compose uses these to initialize Postgres
POSTGRESQL_DATABASE=${DB_DATABASE}
POSTGRESQL_USERNAME=${DB_USERNAME}
POSTGRESQL_PASSWORD=${DB_PASSWORD}

# =========================
# Redis (for cache/sessions/queues)
# Docker service name is "redis"
# =========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_even_stronger

CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=database
# Optional: prefix to avoid key collisions if you run multiple stacks
CACHE_PREFIX=laravel_prod_

# =========================
# Mail (optional; safe defaults)
# =========================
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =========================
# App bootstrap knobs used by entrypoint
# =========================
RUN_MIGRATIONS=true
RUN_SEEDERS=false

# =========================
# Image name for compose pulls (also set in GitHub Actions env/vars)
# =========================
IMAGE_NAME=johnbibs/laravel-api
